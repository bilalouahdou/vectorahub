RewriteEngine On
# 1) Redirect any direct .php request to clean URL: /page.php -> /page (but exclude backend scripts)
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php(\s|\?)
RewriteCond %{REQUEST_URI} !^/php/
RewriteRule ^ %1 [R=301,L]

# 2) Serve existing files/folders normally (don't rewrite assets)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3) Map extensionless URLs to their .php counterparts: /login -> /login.php
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L,QSA]

# 4) Default document
DirectoryIndex index.php 